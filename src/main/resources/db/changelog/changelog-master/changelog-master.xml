    <changeSet id="1" author="gustavo.silva@sgisistemas.com.br">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="account_type" tableName="account"/>
            </not>
        </preConditions>
        <addColumn tableName="account">
            <column name="account_type" type="VARCHAR(30)"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="gustavo.silva@sgisistemas.com.br" >
        <update tableName="account">
            <column name="account_type" value="CHECKING" />
            <where>account_type is null</where>
        </update>
    </changeSet>

