<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="guilherme.lima@sgisistemas.com.br">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="account_type" tableName="account"/>
            </not>
        </preConditions>
        <addColumn tableName="account">
            <column name="account_type" type="VARCHAR(36)"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="guilherme.lima@sgisistemas.com.br">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) > 0
                FROM account a
                WHERE a.account_type ISNULL
            </sqlCheck>
        </preConditions>
        <comment> Considerando todas as contas jรก existentes como CHECKING </comment>
        <sql>
            INTO account a  (a.account_type)
            VALUES ('CHECKING')
            WHERE a.account_type ISNULL
        </sql>
    </changeSet>
</databaseChangeLog>
